<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layoutDirection="rtl"
    android:orientation="vertical">

    <com.github.mmin18.widget.RealtimeBlurView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:realtimeBlurRadius="20dp"
        app:realtimeOverlayColor="#8000" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/bg_also_black_gradient_edge"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingTop="@dimen/_20sdp"
                android:paddingRight="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:gravity="center_vertical"
                            android:paddingRight="10dp"
                            android:text="از ساعت "
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/_15sdp" />

                        <EditText
                            android:id="@+id/edtFromTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/bg_spinner"
                            android:gravity="center"
                            android:inputType="numberDecimal"
                            android:nextFocusRight="@id/edtToTime"
                            android:paddingRight="10dp"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_20sdp" />

                    </LinearLayout>

                    <View
                        android:layout_width="15dp"
                        android:layout_height="0dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:gravity="center_vertical"
                            android:paddingRight="10dp"
                            android:text="تا ساعت "
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/_15sdp" />

                        <EditText
                            android:id="@+id/edtToTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/bg_spinner"
                            android:gravity="center"
                            android:inputType="numberDecimal"
                            android:nextFocusDown="@id/edtStop"
                            android:paddingRight="10dp"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_20sdp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:gravity="center_vertical"
                        android:paddingRight="10dp"
                        android:text="بررسی خطا"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_15sdp" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.15"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/ic_precent" />

                    <EditText
                        android:id="@+id/edtCheckMistakePercent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:background="@drawable/bg_spinner"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:nextFocusRight="@id/edtMeter"
                        android:paddingRight="10dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_20sdp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:gravity="center_vertical"
                        android:paddingRight="10dp"
                        android:text="ثبت سفر"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_15sdp" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.15"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/ic_precent" />

                    <EditText
                        android:id="@+id/edtTripRegisterPercent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:background="@drawable/bg_spinner"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:nextFocusRight="@id/edtMeter"
                        android:paddingRight="10dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_20sdp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:gravity="center_vertical"
                        android:paddingRight="10dp"
                        android:text="تعیین محدوده"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_15sdp" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.15"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/ic_precent" />

                    <EditText
                        android:id="@+id/edtDeterminationPercent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:background="@drawable/bg_spinner"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:nextFocusRight="@id/edtMeter"
                        android:paddingRight="10dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_20sdp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:gravity="center_vertical"
                        android:paddingRight="10dp"
                        android:text="تماس راننده"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_15sdp" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.15"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/ic_precent" />

                    <EditText
                        android:id="@+id/edtDriverCallsPercent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:background="@drawable/bg_spinner"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:nextFocusRight="@id/edtMeter"
                        android:paddingRight="10dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_20sdp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:gravity="center_vertical"
                        android:paddingRight="10dp"
                        android:text="بررسی شکایات"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_15sdp" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.15"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/ic_precent" />

                    <EditText
                        android:id="@+id/edtCheckComplaintPercent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:background="@drawable/bg_spinner"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:nextFocusRight="@id/edtMeter"
                        android:paddingRight="10dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_20sdp" />

                </LinearLayout>

                <ViewFlipper
                    android:id="@+id/vfSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@drawable/bg_circle_left_blue">

                    <Button
                        android:id="@+id/btnSubmit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:gravity="center"
                        android:text="ثبت"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/colorWhite"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <com.wang.avi.AVLoadingIndicatorView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        app:indicatorColor="#508dff " />

                </ViewFlipper>


            </LinearLayout>

            <ImageView
                android:id="@+id/imgCancelDialog"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_alignParentLeft="true"
                android:layout_margin="2dp"
                android:background="@drawable/bg_circle_red_all"
                android:padding="@dimen/_7sdp"
                android:src="@drawable/ic_close" />

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>